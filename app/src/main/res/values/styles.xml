<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
		<item name="colorAccent">@color/warnaAksen</item>
		<item name="colorPrimary">@color/warnaUtama</item>
		<item name="colorPrimaryDark">@color/warnaUtamaDark</item>
		<item name="android:windowBackground">@color/warnaLatar</item>
		<item name="actionBarStyle">@style/myActionBar</item>
    </style>
	<style name="AppTheme.Button" parent="Widget.AppCompat.Button.Colored">
		<item name="colorButtonNormal">?attr/colorPrimary</item>
		<item name="android:textColor">@android:color/white</item>
	</style>
	<style name="myActionBar" parent="Base.Widget.AppCompat.Light.ActionBar.Solid">
		<item name="elevation">0dp</item>
	</style>
</resources>
